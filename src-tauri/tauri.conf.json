{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm build",
    "beforeDevCommand": "npm dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mega-manipulator",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": [
          "$HOME/**"
        ]
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "cmd": "git",
            "name": "git",
            "args": true
          },
          {
            "cmd": "ag",
            "name": "ag",
            "args": true
          },
          {
            "cmd": "grep",
            "name": "grep",
            "args": true
          },
          {
            "cmd": "ripgrep",
            "name": "ripgrep",
            "args": true
          },
          {
            "name": "open-osx",
            "cmd": "open",
            "args": [
              "-a",
              {
                "validator": ".*"
              },
              {
                "validator": ".*"
              }
            ]
          },
          {
            "name": "printenv-path",
            "cmd": "printenv",
            "args": [
              "PATH"
            ]
          },
          {
            "name": "bash-run-script",
            "cmd": "bash",
            "args": [
              {
                "validator": "^.*mega-manipulator.bash$"
              }
            ]
          },
          {
            "name": "chmod-script-file",
            "cmd": "chmod",
            "args": [
              "+x",
              {
                "validator": "^$HOME.*mega-manipulator.bash$"
              }
            ]
          }
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "http": {
        "all": true
      },
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Jens Brimfors",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.mega-manipulator-standalone.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "license": "../LICENSE",
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU4RjQ0RjJDOEVGQTI2MgpSV1Jpb3UvSThrU1BCVENEN3lzSFRhQnJSRFJrbUwzczZHK0pNazhyUnRubGtSZTg1bTNRb3J4Ugo=",
      "endpoints": [
        "https://raw.githubusercontent.com/mega-manipulator/mega-manipulator-standalone/main/tauri-update.json"
      ],
      "dialog": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 8000,
        "resizable": true,
        "title": "mega-manipulator",
        "width": 1000
      }
    ]
  }
}
