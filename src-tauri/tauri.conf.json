{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mega-manipulator-standalone",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": [
          "$HOME/**"
        ]
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "cmd": "git",
            "name": "git",
            "args": true
          },
          {
            "cmd": "ag",
            "name": "ag",
            "args": true
          },
          {
            "cmd": "grep",
            "name": "grep",
            "args": true
          },
          {
            "cmd": "ripgrep",
            "name": "ripgrep",
            "args": true
          },
          {
            "name": "open-osx",
            "cmd": "open",
            "args": [
              "-a",
              {
                "validator": ".*"
              },
              {
                "validator": "$HOME.*"
              }
            ]
          },
          {
            "name": "bash-run-script",
            "cmd": "bash",
            "args": [
              {
                "validator": "^$HOME.*mega-manipulator.bash$"
              }
            ]
          },
          {
            "name": "chmod-script-file",
            "cmd": "chmod",
            "args": [
              "+x",
              {
                "validator": "^$HOME.*mega-manipulator.bash$"
              }
            ]
          }
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "http": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.mega-manipulator-standalone.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "mega-manipulator",
        "width": 800
      }
    ]
  }
}
